---

env: dev

# ports available for the public
http_port: 80
https_port: 443

# main app settings
app_url: "{{ hostvars.node1.ansible_ssh_host }}:{{ https_port }}"

# nginx docker instances
fe_instances:
  - name: "{{ app_name }}-{{ env }}-fe-1"
    http_port: 10000
    https_port: 10001


# load balancer
lb_instances:
  - name: "{{ app_name }}-{{ env }}-lb-1"
    http_port: 80
    https_port: 443